{% apply inline_css %}

<style>

    .mail {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        font-family: 'sans-serif';
        font-size: 1.25rem
    }

    .mail>div {
        flex:1;
    }

    section>.mail__message {
        margin: 0 1.5rem;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
        font-family: 'sans-serif';
        color: #232425;
    }

    .organism {
        font-size: 1rem;
        color: #424242;
    }

    .organism>span {
        font-weight: bold;
    }

    .message {
        text-align: justify;
        line-height: 1.25rem;
    }

    .mail__picture {
        position: relative;
        border-left: solid 10px #e0b029;
        flex: 1;
    }

    .mail__message {
        flex: 2;
    }

    .mail__picture-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

</style>

<section class="mail">
    <div class="mail__picture">
        <img class="mail__picture-img" src="{{ email.image('@img/ares_black.png') }}" alt="Création graphique - Arès">
    </div>
    <div class="mail__message">
        <h1>Contact de {{ lastname|capitalize }} {{ firstname|capitalize }} - {{ subject|capitalize }}</h1>
        {% if organism is not same as('Aucune') %}
            <p class="organism"><span>Raison Sociale : </span>{{ organism }}</p>
        {% endif %}
        <p class="message">{{ message }}</p>
    </div>
</section>


{% endapply %}